<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/dashboard">Strona główna</a>
          </li>
          <li class="breadcrumb-item active-1">
            Dodaj notatkę
          </li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h2">Dodaj notatkę</h1>
      </div>
    </div>
  </div>

  <form action="/dashboard/item" method="POST" class="position-relative">
    <div class="form-group mb-4 position-absolute" style="left:1px;top:1px;right:1px;">
      <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" placeholder="Tytuł notatki" required>
    </div>

    <div class="form-group mb-4">
      <textarea class="form-control pt-5 fs-4" id="body" name="body" placeholder="Napisz notatkę..." rows="12" required></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>
    </div>
  </form>

</div>